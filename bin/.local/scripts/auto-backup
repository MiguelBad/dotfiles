#!/usr/bin/env bash

# Document

SEM2="/home/miguel/Documents/"

SEM2_PATH_1="/home/miguel/backup/documents"
SEM2_PATH_2="/mnt/backup/backup/documents"

LOG_PATH="/home/miguel/backup_logs/backup_log.log"

rsync -avh "$SEM2" "$SEM2_PATH_1" >> "$LOG_PATH" 2>&1
rsync -avh "$SEM2" "$SEM2_PATH_2" >> "$LOG_PATH" 2>&1

# .config

CONFIG="/home/miguel/.config"

CONFIG_PATH_1="/home/miguel/backup/.config/"
CONFIG_PATH_2="/mnt/backup/backup/.config/"

LOG_PATH_CONFIG="/home/miguel/backup_logs/backup_config_log.log"

rsync -avh --exclude='BraveSoftware/' --exclude='YouTube Music Desktop App' --exclude='google-chrome' --exclude='discord' "$CONFIG" "$CONFIG_PATH_1" >> "$LOG_PATH_CONFIG" 2>&1
rsync -avh --exclude='BraveSoftware/' --exclude='YouTube Music Desktop App' --exclude='google-chrome' --exclude='discord' "$CONFIG" "$CONFIG_PATH_2" >> "$LOG_PATH_CONFIG" 2>&1
